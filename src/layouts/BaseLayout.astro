---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import { icons } from "../utils/icons";

const buttonLinks = [
  { href: "https://www.instagram.com/blessy_takes_pictures_", label: "Instagram", icon: icons.instagram },
  { href: "https://www.facebook.com", label: "Facebook", icon: icons.facebook },
  //{ href: "https://www.github.com", label: "Github", icon: icons.github },
];

const navLinks = [
  { href: '/', label: 'Home', isActive: true },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/contact', label: 'Contact' },
];

const logoSrc ="https://flowbite.com/docs/images/logo.svg";
const logoAlt ="Logo";

---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Template Site</title>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />

  </head>
  <body class="bg-gray-100">
    <Header
      logoSrc = {logoSrc},
      logoAlt = {logoAlt},
      navLinks={navLinks}
      buttonLinks={buttonLinks}
    />
    <slot />
    <Footer />
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
    </html>
